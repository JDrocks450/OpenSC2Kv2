<Window x:Class="OpenSC2KTools.MapViewer.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenSC2KTools.MapViewer"
        mc:Ignorable="d" WindowStyle="ToolWindow" ResizeMode="NoResize"
        Title="WelcomeWindow" SizeToContent="Height" Width="350" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}">
    <StackPanel Margin="10">
        <TextBlock HorizontalAlignment="Center" FontFamily="Microsoft Sans Serif" FontWeight="Bold">Please select your SimCity 2000 installation directory.</TextBlock>
        <DockPanel Margin="0,10">
            <Button x:Name="BrowseButton" DockPanel.Dock="Right" Padding="10,2" Click="BrowseButton_Click">Browse</Button>
            <TextBox Name="FilePath"></TextBox>
        </DockPanel>
        <Button x:Name="OK" HorizontalAlignment="Center" Width="71" Click="OK_Click">OK</Button>
    </StackPanel>
</Window>
